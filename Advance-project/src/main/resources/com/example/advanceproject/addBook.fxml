<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="750.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>

        <Label layoutX="220.0" layoutY="20.0" text="Add New Book">
            <font>
                <Font name="System Bold" size="32.0" />
            </font>
        </Label>


        <ImageView fitHeight="120.0" fitWidth="120.0" layoutX="60.0" layoutY="3.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../images/addBook.png" />
            </image>
        </ImageView>


        <Separator layoutX="50.0" layoutY="80.0" prefWidth="900.0" />


        <ImageView fitHeight="370.0" fitWidth="280.0" layoutX="100.0" layoutY="120.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../images/bookImage.jpeg" />
            </image>
        </ImageView>

        <Hyperlink layoutX="180.0" layoutY="500.0" style="-fx-text-fill: #DCA942; -fx-font-size: 14; -fx-underline: true;" text="Upload Book Image" />

        <TextField layoutX="500.0" layoutY="120.0" prefHeight="40.0" prefWidth="400.0" promptText="Book Title" style="-fx-background-radius: 50; -fx-border-radius: 50; -fx-border-color: #DCA942; -fx-border-width: 2;" />
        <TextField layoutX="500.0" layoutY="200.0" prefHeight="40.0" prefWidth="400.0" promptText="Author Name" style="-fx-background-radius: 50; -fx-border-radius: 50; -fx-border-color: #DCA942; -fx-border-width: 2;" />
        <TextField layoutX="500.0" layoutY="280.0" prefHeight="40.0" prefWidth="400.0" promptText="Book Type" style="-fx-background-radius: 50; -fx-border-radius: 50; -fx-border-color: #DCA942; -fx-border-width: 2;" />
        <TextField layoutX="500.0" layoutY="360.0" prefHeight="40.0" prefWidth="400.0" promptText="yyyy-MM-dd" style="-fx-background-radius: 50; -fx-border-radius: 50; -fx-border-color: #DCA942; -fx-border-width: 2; -fx-text-fill: #DCA942;" />
        <TextField layoutX="500.0" layoutY="440.0" prefHeight="40.0" prefWidth="400.0" promptText="Booking Status" style="-fx-background-radius: 50; -fx-border-radius: 50; -fx-border-color: #DCA942; -fx-border-width: 2;" />

        <!-- Cancel Button -->
        <Button layoutX="333.0" layoutY="577.0" mnemonicParsing="false" prefHeight="53.0" prefWidth="150.0" text="Cancel" style="-fx-background-color: #DCA942; -fx-text-fill: white; -fx-background-radius: 20;">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Button>

        <!-- Add Button -->
        <Button layoutX="550.0" layoutY="577.0" mnemonicParsing="false" prefHeight="53.0" prefWidth="150.0" text="Add" style="-fx-background-color: #DCA942; -fx-text-fill: white; -fx-background-radius: 20;">
            <font>
                <Font name="System Bold" size="21.0" />
            </font>
        </Button>

    </children>
</AnchorPane>

