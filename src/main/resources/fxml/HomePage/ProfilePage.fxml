<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="750.0" prefWidth="1000.0" style="-fx-background-color: #F4F6F8;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="librarysystem.controllers.HomePage.ProfileController">

<center>
    <VBox alignment="CENTER" spacing="20" BorderPane.alignment="CENTER">
        <ImageView fx:id="profileImage" fitHeight="136.0" fitWidth="150.0" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 0);">

        </ImageView>

        <Label fx:id="nameLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;" text=" " />
        <Label fx:id="roleLabel" style="-fx-font-size: 18px; -fx-text-fill: #555555;" text=" " />

        <Separator prefWidth="400.0" style="-fx-background-color: #E0E0E0;" />

        <!-- Information Section -->
        <VBox alignment="CENTER_LEFT" prefWidth="400.0" spacing="10">

            <HBox alignment="CENTER" spacing="20">

                <Label style="-fx-font-size: 16px; -fx-text-fill: #666666;" text="Email:" />
                <Label fx:id="emailLabel" style="-fx-font-size: 16px; -fx-text-fill: #333333;" text=" " />

            </HBox>
            <HBox alignment="CENTER" spacing="20">

                <Label style="-fx-font-size: 16px; -fx-text-fill: #666666;" text="Phone:" />
                <Label fx:id="phoneLabel" style="-fx-font-size: 16px; -fx-text-fill: #333333;" text=" " />

            </HBox>
            <HBox alignment="CENTER" spacing="20">

                <Label style="-fx-font-size: 16px; -fx-text-fill: #666666;" text="Joined Date:" />
                <Label fx:id="dateLabel" style="-fx-font-size: 16px; -fx-text-fill: #333333;" text=" " />

            </HBox>

        </VBox>

    </VBox>
</center>
<left>
    <AnchorPane prefHeight="200.0" prefWidth="220.0" style="-fx-background-color: #3A3F44;"
                BorderPane.alignment="CENTER">
        <Button layoutX="27.0" layoutY="179.0" prefWidth="180.0"
                style="-fx-background-color: #5A6268; -fx-text-fill: #FFFFFF;" text="Edit Profile"
                AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"/>
        <Button layoutX="26.0" layoutY="260.0" prefWidth="180.0"
                style="-fx-background-color: #5A6268; -fx-text-fill: #FFFFFF;" text="Back" onAction="#switchForm"
                AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"/>
        <Button layoutX="30.0" layoutY="670.0" prefWidth="180.0" onAction="#logout"
                style="-fx-background-color: #D9534F; -fx-text-fill: #FFFFFF;"  text="Logout"
                AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"/>
        <Label layoutX="35.0"  layoutY="47.0" prefHeight="27.0" prefWidth="153.0"
               style="-fx-text-fill: #FFFFFF; -fx-font-size: 18px; -fx-font-weight: bold;" text="Laibrarian Profile"
               textAlignment="CENTER" AnchorPane.leftAnchor="35.0" AnchorPane.rightAnchor="32.19999999999999">
            <font>
                <Font name="System Bold" size="20.0"/>
            </font>
        </Label>
    </AnchorPane>
</left>
</BorderPane>
