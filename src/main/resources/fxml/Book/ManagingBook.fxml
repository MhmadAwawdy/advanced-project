<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>

<AnchorPane prefHeight="606.0" prefWidth="780.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="librarysystem.controllers.Book.ManagingBookController">

    <TabPane prefWidth="780.0" prefHeight="606.0">

        <Tab text="Add Book">
            <AnchorPane prefHeight="606.0" prefWidth="780.0">

                <Label alignment="CENTER_LEFT" text="Add New Book" AnchorPane.leftAnchor="300.0"
                       AnchorPane.rightAnchor="2.0" AnchorPane.topAnchor="25.0">
                    <font>
                        <Font name="System Bold" size="32.0"/>
                    </font>
                </Label>

                <ImageView fitHeight="130.0" fitWidth="130.0" preserveRatio="true" AnchorPane.leftAnchor="120.0"
                           AnchorPane.topAnchor="2.0">
                    <image>
                        <Image url="@../../Image/addBook.png"/>
                    </image>
                </ImageView>

                <ImageView fx:id="imageView" fitHeight="270.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true"
                           AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="170.0">
                    <image></image>
                </ImageView>


                <Hyperlink fx:id="uploadImageLink" alignment="CENTER" text="Upload Book Image"
                           AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="470.0" onAction="#loadImage">
                    <style>
                        -fx-text-fill: #DCA942; -fx-font-size: 14; -fx-underline: true;
                    </style>
                </Hyperlink>

                <TextField fx:id="titleField" prefHeight="40.0" promptText="Book Title"
                           style="-fx-background-radius: 50; -fx-border-radius: 50; -fx-border-color: #DCA942; -fx-border-width: 2;"
                           AnchorPane.leftAnchor="300.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="160.0"/>
                <TextField fx:id="authorField" prefHeight="40.0" promptText="Author Name"
                           style="-fx-background-radius: 50; -fx-border-radius: 50; -fx-border-color: #DCA942; -fx-border-width: 2;"
                           AnchorPane.leftAnchor="300.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="220.0"/>
                <TextField fx:id="typeField" prefHeight="40.0" promptText="Book Type"
                           style="-fx-background-radius: 50; -fx-border-radius: 50; -fx-border-color: #DCA942; -fx-border-width: 2;"
                           AnchorPane.leftAnchor="300.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="280.0"/>
                <TextField fx:id="dateField" prefHeight="40.0" promptText="Publish year"
                           style="-fx-background-radius: 50; -fx-border-radius: 50; -fx-border-color: #DCA942; -fx-border-width: 2;"
                           AnchorPane.leftAnchor="300.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="340.0"/>
                <TextField fx:id="statusField" prefHeight="40.0" promptText="Booking Status"
                           style="-fx-background-radius: 50; -fx-border-radius: 50; -fx-border-color: #DCA942; -fx-border-width: 2;"
                           AnchorPane.leftAnchor="300.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="400.0"/>


                <Label fx:id="titleErrorText" style="-fx-fill: red;" visible="false" AnchorPane.leftAnchor="300.0"
                       AnchorPane.topAnchor="200.0"/>
                <Label fx:id="authorErrorText" style="-fx-fill: red;" visible="false" AnchorPane.leftAnchor="300.0"
                       AnchorPane.topAnchor="260.0"/>
                <Label fx:id="typeErrorText" style="-fx-fill: red;" visible="false" AnchorPane.leftAnchor="300.0"
                       AnchorPane.topAnchor="320.0"/>
                <Label fx:id="dateErrorText" style="-fx-fill: red;" visible="false" AnchorPane.leftAnchor="300.0"
                       AnchorPane.topAnchor="380.0"/>
                <Label fx:id="statusErrorText" style="-fx-fill: red;" visible="false" AnchorPane.leftAnchor="300.0"
                       AnchorPane.topAnchor="440.0"/>

                <HBox alignment="CENTER" spacing="40.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="20.0"
                      AnchorPane.rightAnchor="20.0">
                    <Button fx:id="cancelButton" prefHeight="50.0" prefWidth="150.0"
                            style="-fx-background-color: #DCA942; -fx-text-fill: white; -fx-background-radius: 20;" text="Cancel">
                        <font>
                            <Font name="System Bold" size="20.0"/>
                        </font>
                    </Button>
                    <Button fx:id="addButton" prefHeight="50.0" prefWidth="150.0"
                            style="-fx-background-color: #DCA942; -fx-text-fill: white; -fx-background-radius: 20;" text="Add">
                        <font>
                            <Font name="System Bold" size="20.0"/>
                        </font>
                    </Button>
                </HBox>

            </AnchorPane>
        </Tab>

        <!-- Update Book -->
        <Tab text="Update Book">
            <AnchorPane prefHeight="606.0" prefWidth="780.0">

                <Label fx:id="page_tittle" layoutX="388.0" layoutY="43.0" text="Update Book Information:">
                    <font>
                        <Font name="System Bold" size="28.0"/>
                    </font>
                </Label>

                <TextField fx:id="book_tittle" layoutX="293.0" layoutY="173.0" prefHeight="40.0" prefWidth="534.0"
                           promptText="Book-title"
                           style="-fx-border-color: #DCA942; -fx-border-radius: 20; -fx-background-radius: 20;"/>
                <TextField fx:id="author_name" layoutX="294.0" layoutY="241.0" prefHeight="40.0" prefWidth="534.0"
                           promptText="Author-name"
                           style="-fx-border-color: #DCA942; -fx-border-radius: 20; -fx-background-radius: 20;"/>
                <TextField fx:id="book_type" layoutX="293.0" layoutY="311.0" prefHeight="40.0" prefWidth="534.0"
                           promptText="Book-type"
                           style="-fx-border-color: #DCA942; -fx-border-radius: 20; -fx-background-radius: 20;"/>
                <TextField fx:id="puplication_date" layoutX="293.0" layoutY="381.0" prefHeight="40.0" prefWidth="534.0"
                           promptText="Publication-date"
                           style="-fx-border-color: #DCA942; -fx-border-radius: 20; -fx-background-radius: 20;"/>
                <TextField fx:id="book_status" layoutX="294.0" layoutY="453.0" prefHeight="40.0" prefWidth="534.0"
                           promptText="Booking-status"
                           style="-fx-border-color: #DCA942; -fx-border-radius: 20; -fx-background-radius: 20;"/>

                <Button fx:id="update_btn" layoutX="510.0" layoutY="576.0" prefHeight="44.0" prefWidth="102.0"
                        style="-fx-background-color: #DCA942; -fx-background-radius: 10px;" text="Update" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="16.0"/>
                    </font>
                </Button>
                <Button fx:id="updateBook_Back" layoutX="37.0" layoutY="47.0" prefHeight="31.0" prefWidth="58.0"
                        style="-fx-background-color: #DCA942; -fx-background-radius: 10PX;" text="Back"/>

            </AnchorPane>
        </Tab>

    </TabPane>

</AnchorPane>
