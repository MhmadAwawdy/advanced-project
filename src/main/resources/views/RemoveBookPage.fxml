<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.RemoveBookController">
    <top>
        <Label text="Remove a Book" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 10;"/>
    </top>
    <center>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20;">
            <TextField fx:id="isbnField" promptText="ISBN of the book to remove"/>
            <Button text="Remove Book" fx:id="removeBookButton" onAction="#handleRemoveBook" style="-fx-background-color: #DCA942; -fx-text-fill: black;"/>
        </VBox>
    </center>
</BorderPane>
